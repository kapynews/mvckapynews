@{
    Layout = "";
}

@model IEnumerable<KapyApp.Models.Comment>

<body>
    <h4> Recent Comments </h4>



    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.userName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.commentContent)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.isDisplayed)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.numOfComentLikes)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.postTime)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.News1.uniqueTitle)
                </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            if (item.isDisplayed)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.userName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.commentContent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.numOfComentLikes)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.postTime)
                    </td>
                   
                    @*<td>
                            @Html.DisplayFor(modelItem => item.isDisplayed)
                        </td>*@
                    
                    
                    @*<td>
                            @Html.DisplayFor(modelItem => item.News1.uniqueTitle)
                        </td>*@
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.commentId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.commentId }) |*@
                        @Html.ActionLink("Like", "LikeAComment", "Comments", new { id = item.commentId }, null)
                        
                    </td>
                </tr>
            }
        }

    </table>

    <p>
        @Html.ActionLink("Comment Now", "CreateCommentForNews", new { id = ViewBag.newsID })
    </p>

</body>
